{% extends 'base.html.twig' %}

{% block title %}ComparteCoche{% endblock %}

{% block body %}
{#{ dump(datos_trayecto) }#}
<section class="section">
    <div class="container">
        <h1 class="title">
            Trayecto
        </h1>
        <p class="subtitle">
            Viaje disponible
        </p>
    </div>
</section>

<div class="container is-fluid">
    <article class="tile is-child notification is-success">
        <p class="title">Opciones</p>
        <p class="subtitle">Elija alguna de las opciones disponibles</p>
        <div class="content">
            {% if estoy %}
                <div class="buttons">
                    <button class="button is-danger" onclick="location.href='{{ path('app_delTrayecto', {id: otros[0].id}) }}'">Me borro!!</button>
                    <button class="button is-link" onclick="location.href='{{ path('app_delTrayecto', {id: otros[0].id}) }}'">Yo conduzco</button>
                </div>
            {% else %}
                <div class="buttons">
                    <button class="button is-link" onclick="location.href='{{ path('app_addTrayecto', {id: otros[0].id}) }}'">Me apunto!!</button>
                </div>
            {% endif %}
        </div>
    </article>
</div>

<div class="container is-fluid mt-2">
    <article class="tile is-child notification is-warning">
        <nav class="level has-background-warning px-3 py-2">
            <div class="level-left">
                <div class="level-item">
                    <div class="control">
                    <span class="tag is-large is-link">
                        {{ otros[0].fecha.dateTrayecto | format_datetime('short', 'none', locale='fr') }}                
                    </span>
                    <span class="tag is-danger">
                        {{ otros[0].fecha.timeAt | format_time(pattern='HH:mm') }}
                    </span>
                    <span class="tag is-danger">
                        {{ otros[0].fecha.timeTo | format_time(pattern='HH:mm') }}
                    </span>
                    </div>
                </div>
                <div class="level-item">
                    <span class="avatars">
                        {% for track in otros %}
                            <div class="avatar">
                            {% if track.driver.avatar %}                            
                                <img class="avatar" src="/images/avatars/{{ track.driver.avatar }}" alt="{{ track.driver.email }}">
                                <span class="tooltiptext">{{ track.driver.email }}</span>
                            {% else %}
                                <img class="avatar" src="/images/avatars/default.png" alt="{{ track.driver.email }}">
                            {% endif %}
                            </div>
                        {% endfor %}
                    </span>
                </div>
            </div>
            <div class="level-left">
            {% if estoy %}
                <!--<iframe style="height:75px" src="{{ path('comparativa', {id: otros[0].id}) }}"></iframe>-->
                <nav class="level p-1" style="border: 1px solid #191919;">
                    <div class="level-left">
                        {% for key, grupos in mayoria %}
                        <span class="tag is-link">Con {{ key }} Puntos:</span>
                        <div class="level-item">
                            {% for usuario in grupos %}
                            <div class="avatars">
                                <div class="avatar">
                                    <img class="avatar" src="/images/avatars/{{ usuario.avatar }}" alt="{{ usuario.email }}">
                                    <span class="tooltiptext">{{ usuario.email }}</span>
                                </div>
                            </div>
                            {% endfor %}
                        </div>
                        {% endfor %}
                    </div>
                </nav>
            {% endif %}
            </div>
            
        </nav>
    </article>
    
</div>


                            
{% endblock %}
