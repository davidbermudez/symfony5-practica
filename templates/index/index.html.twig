{% extends 'base.html.twig' %}

{% block title %}ComparteCoche{% endblock %}
{% block stylesheets %}    
    <!-- avatars -->
    <link href="/css/avatars.css" rel="stylesheet">
{% endblock %}

{% block body %}

    <!-- features
    ================================================== -->    
    <section id="about" class="s-about target-section">
        <div class="shadow-overlay"></div>
        <div class="row section-header has-bottom-sep" data-aos="fade-up">
            <div class="col-full">
                <h1 class="display-1">
                    Gestiona tus viajes
                </h1>
                <p class="lead">
                    
                </p>
            </div>
        </div> <!-- end section-header -->

        <div class="row wide about-desc" data-aos="fade-up">

            <div class="row home">

                <div class="col-full slick-slider testimonials__slider">

                    <div class="testimonials__slide">
                        <h3>Tus trayectos</h3>                        
                        <div>Existen {{ trayectos|length }} trayectos</div>
                        <table class="table table-success table-striped">
                            <thead>
                                <tr>
                                <th scope="col">Fecha</th>
                                <th scope="col">Inicio</th>
                                <th scope="col">Fin</th>
                                <th scope="col">F</th>
                                </tr>
                            </thead>
                            <tbody>                            
                            {% for trayecto in trayectos %}                            
                                <tr>
                                    <th scope="row">                                        
                                        {{ trayecto.dateTrayecto | format_datetime('short', 'none', locale='fr') }}
                                    </th>
                                    <td>
                                        {{ trayecto.timeAt | format_time(pattern='HH:mm') }}
                                    </td>
                                    <td>
                                        {{ trayecto.timeTo | format_time(pattern='HH:mm') }}
                                    </td>
                                    <td>                                        
                                        {% if trayecto.passenger is null %}
                                            <i class="fa fa-question text-danger"></i>
                                        {% elseif trayecto.passenger == false %}
                                            <i class="fa fa-automobile text-primary"></i>
                                        {% else %}
                                            <i class="fa fa-user text-success"></i>
                                        {% endif %}
                                    </td>
                                </tr>                                        
                            {% endfor %}
                            </tbody>
                        </table>
                        <nav aria-label="...">
                            <ul class="pagination">
                                <!-- Previous -->
                                {% if previous >= 0 %}
                                    <li class="page-item">
                                        <a class="page-link" href="{{ path('homepage', { offset:previous }) }}">Previous</a>
                                    </li>
                                {% else %}
                                    <li class="page-item disabled">
                                        <a class="page-link">Previous</a>
                                    </li>
                                {% endif %}
                                {% if (trayectos|length)/10 > 2 %}
                                    <li class="page-item">
                                        <a class="page-link" href="{{ path('homepage', { offset:next }) }}">{{ (next/10) }}</a>
                                    </li>
                                {% endif %}
                                <!-- Next -->
                                {% if next < trayectos|length %}
                                    <li class="page-item">
                                        <a class="page-link" href="{{ path('homepage', { offset: next}) }}">Next</a>
                                    </li>
                                {% else %}
                                    <li class="page-item disabled">
                                        <a class="page-link">Next</a>
                                    </li>
                                {% endif %}
                            </ul>
                        </nav>

                        <div class="testimonials__author">
                            <span class="testimonials__name">Naruto Uzumaki</span>
                            <a href="#0" class="testimonials__link">@narutouzumaki</a>
                        </div>
                    </div> <!-- end testimonials__slide -->

                    <div class="testimonials__slide">
                        <h3>Trayectos Próximos</h3>
                        <div>
                            {% for trayectos in disponibles %}
                                <div class="d-flex justify-content-center">
                                    <div class="d-flex justify-content-evenly container-sm p-3 border bg-light">
                                        <button type="button" class="btn btn-primary position-relative" onclick='location.href = "{{ path('app_trayecto', {id: trayectos.id}) }}"'>
                                            {{ trayectos.date_trayecto | format_datetime('short', 'none', locale='fr') }}
                                            <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                                                {{ trayectos.time_at | format_time(pattern='HH:mm') }}
                                            </span>
                                            <span class="position-absolute top-100 start-100 translate-middle badge rounded-pill bg-danger">
                                                {{ trayectos.time_to | format_time(pattern='HH:mm') }}
                                            </span>
                                        </button>
                                        <div class="col">
                                            <section class="avatars">
                                            {% for users in trayectos["drivers"] %}
                                                {% if users.avatar %}
                                                    <img src="/images/avatars/{{ users.avatar }}" alt="{{ users.email }}">
                                                {% else %}
                                                    <img src="/images/avatars/default.png" alt="{{ users.email }}">
                                                {% endif %}
                                            {% endfor %}
                                            </section>
                                        </div>
                                    </div>
                                </div>                                    
                            {% endfor %}
                        </div>           
                                                
                        <div class="testimonials__author">
                            <span class="testimonials__name">Sasuke Uchiha</span>
                            <a href="#0" class="testimonials__link">@sasukeuchiha</a>
                        </div>
                    </div> <!-- end testimonials__slide -->

                    <div class="testimonials__slide">
                        <img src="images/avatars/user-01.jpg" alt="Author image" class="testimonials__avatar">
                        
                        <p>Repellat dignissimos libero. Qui sed at corrupti expedita voluptas odit. Nihil ea quia nesciunt. Ducimus aut sed ipsam.  
                        Autem eaque officia cum exercitationem sunt voluptatum accusamus. Quasi voluptas eius distinctio.</p>

                        <div class="testimonials__author">
                            <span class="testimonials__name">Shikamaru Nara</span>
                            <a href="#0" class="testimonials__link">@shikamarunara</a>
                        </div>
                    </div> <!-- end testimonials__slide -->
                    
                </div> <!-- end testimonials__slider -->

            </div> <!-- end testimonials -->

        </div> <!-- end testimonials-wrap -->

    </section> <!-- end s-features -->

    <section class="container px-4 mt-5 mb-5 col-xs-12">
        <div class="row gx-5">
            {% if app.user %}            
                <div class="container overflow-hidden">
                    <div class="row gx-5">
                        <div class="col mb-1">
                            <div class="p-3 border bg-warning bg-gradient">{{ app.user.userIdentifier }}</div>
                        </div>
                        <div class="col mb-1">
                            <div class="p-3 border text-white bg-secondary bg-gradient">{{ grupo }}</div>
                        </div>
                    </div>
                </div>
                <div class="container">
                    <div class="row">
                        <div class="col">
                            <button type="button" class="btn btn-outline-primary btn-ln" onclick="location.href='{{ path('app_newTime') }}'">
                                Nuevo Horario
                            </button>
                        </div>
                        <div class="col">Column</div>
                        <div class="col">Column</div>
                        <div class="col">Column</div>
                    </div>
                </div>

                <div class="container-lg">                    
                    <div class="container-sm">
                        <h3>Tus trayectos</h3>
                        
                        
                    </div>
                    <div class="container-sm">
                        <h3>Próximos Trayectos</h3>
                        <div class="container px-4">
                            <div class="d-flex flex-column mb-3">
                                {#{ dump(disponibles) }#}
                                
                            </div>
                        </div>
                    </div>                    
                </div><!-- container -->
            {% endif %}
        </div>
    </section>
{% endblock %}
