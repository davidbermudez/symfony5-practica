{% extends 'base.html.twig' %}

{% block title %}Mi Grupo{% endblock %}

{% block body %}
<section class="hero is-link">
    <div class="hero-body">
        <p class="title">
            <a href="{{ path('app_grupo') }}">{{ grupo }}</a>
        </p>
        <p class="subtitle">
            {{ grupo.description }}
        </p>
        <div class="hero-avatar">
            <section class="avatars">
                <div class="avatar">
                    <img src="/images/avatars/{{ app.user.avatar }}" alt="{{ app.user.username }}">
                    <span class="tooltiptext">{{ app.user.username }}</span>
                </div>
            </section>
        </div>
    </div>
</section>

<div class="container is-fluid mt-4">
    <div class="tile is-ancestor">
        <div class="tile">
            <div class="tile is-8 is-vertical">
                <div class="tile is-parent is-vertical">
                    <article class="tile is-child notification is-danger">
                        <p class="title">Usuarios</p>
                        <p class="subtitle"></p>
                        <div class="content">
                            {#{ dump(usuarios) }#}
                            {% for user in usuarios %}                                
                                <nav class="level has-background-warning px-3 py-2">
                                    <div class="level-left">
                                        <div class="level-item">
                                            <span class="avatars">
                                                <div class="avatar">
                                                {% if user.avatar %}                                                
                                                    <img src="/images/avatars/{{ user.avatar }}" alt="{{ user.username }}" onclick='location.href = "{{ path('app_user', {id: user.id}) }}"'>                                                    
                                                {% else %}
                                                    <img class="avatar" src="/images/avatars/default.png" alt="{{ user.username }}">                                                    
                                                {% endif %}
                                                {% if user.username != '' %}
                                                    <span class="tooltiptext">{{ user.username }}</span>
                                                {% else %}
                                                    <span class="tooltiptext">{{ user.email }}</span>
                                                {% endif %}                                                     
                                                </div>
                                            </span>
                                        </div>
                                        <div class="level-item">
                                            <p class="subtitle is-5">
                                                {% if user.username != '' %}
                                                    <strong>{{ user.username }}</strong>
                                                {% else %}
                                                    <strong>{{ user.email }}</strong>
                                                {% endif %}
                                            </p>
                                        </div>
                                    </div>
                                    <div class="level-right">
                                        <!-- AJAX -->
                                        <div class="level-item" id="user[{{user.id}}]"></div>
                                    </div>
                                </nav>                            
                            {% endfor %}
                        </div>
                    </article>
                </div>
            </div>
            <div class="tile is-4">
                <div class="tile is-parent is-vertical">
                    {% if grupo.chatlink %}
                    <article class="tile is-child notification is-warning">
                        <p class="title">Telegram</p>
                        <p class="subtitle">Suscríbete al canal</p>
                        <div class="content">
                            <!-- -->
