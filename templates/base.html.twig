<!DOCTYPE html>
<html class="no-js" lang="en">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="stylesheet" href="/css/bulma.min.css">
        <link rel="stylesheet" href="/css/avatars.css">
    </head>

    <body class="has-navbar-fixed-top">
        <!-- Bulma-nav -->
        <header class="nav">
        <nav class="navbar is-fixed-top is-transparent" role="navigation" aria-label="main navigation">

            <div class="navbar-brand">
                <a class="navbar-item" href="{{ path('homepage') }}">
                    <img src="/images/compartecoche.png" height="64">
                </a>
                <a role="button" class="navbar-burger" aria-label="menu" aria-expanded="false" data-target="navbarDesplegable">
                    <span aria-hidden="true"></span>
                    <span aria-hidden="true"></span>
                    <span aria-hidden="true"></span>
                </a>
            </div>

            <div id="navbarDesplegable" class="navbar-menu">
                <div class="navbar-start">
                    <a class="navbar-item" href="{{ path('homepage') }}">
                        Inicio
                    </a>
                    
                    <a class="navbar-item" href="{{ path('app_contact') }}" title="Contact">
                        Contacto
                    </a>

                    {% if app.user %}
                        <a class="navbar-item" href="{{ path('app_logout') }}" title="Logout">Logout</a></li>
                    {% else %}
                        <a class="navbar-item" href="{{ path('app_login') }}" title="Login">Login</a></li>
                    {% endif %}

                    <div class="navbar-item has-dropdown is-hoverable">
                        <a class="navbar-link">
                        More
                        </a>

                        <div class="navbar-dropdown">
                            <a class="navbar-item">
                                About
                            </a>
                            <a class="navbar-item">
                                Jobs
                            </a>
                            <a class="navbar-item">
                                Contact
                            </a>
                            <hr class="navbar-divider">
                            <a class="navbar-item">
                                Report an issue
                            </a>
                        </div>
                    </div>
                </div>

                <div class="navbar-end">
                    <div class="navbar-item">
                        <div class="buttons">
                        {% if app.user %}
                            <a class="button is-warning">
                                Log out
                            </a>
                        {% else %}
                            <a class="button is-primary">
                                Log in
                            </a>
                        {% endif %}    
                        </div>
                    </div>
                </div>
            </div>
        </nav>
        </header>
        <!-- end Bulma-nav -->

        
                

        <!-- message_flash -->
        {% for label, messages in app.flashes %}
            <div class="container-fluid">
            {% for message in messages %}
                <div class="notification is-{{label}}">
                    <button class="delete"></button>
                    {{ message }}
                </div>
            {% endfor %}
            </div>
        {% endfor %} <!-- end message_flash -->

        {% block body %}{% endblock %}
        
        <footer class="footer is-link">
            <div class="content has-text-centered">
                <span>Copyright &copy; 2022</span> 
                <span>Designed And Developed By: <a href="https://twitter.com/DavidBermudeTW/">@DavidBermudezTW</a></span>
            </div>
        </footer> <!-- end s-footer -->

        {% block javascripts %}
            <!-- script
            ================================================== -->
            <script src='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.12.0-2/js/all.min.js'></script>
            <script src="/js/main.js" async defer></script>
            <script>
                // Variables
                let boton_nav = document.querySelector('.navbar-burger');
                let nav_menu = document.querySelector('.navbar-menu');

                // Eventos
                boton_nav.addEventListener('click', function() {
                    nav_menu.classList.toggle('is-active');
                });

                // Closed notifications flash
                document.addEventListener('DOMContentLoaded', () => {
                    (document.querySelectorAll('.notification .delete') || []).forEach(($delete) => {
                        const $notification = $delete.parentNode;

                        $delete.addEventListener('click', () => {
                        $notification.parentNode.removeChild($notification);
                        });
                    });
                    });
                </script>

        {% endblock %}        
    </body>
</html>
