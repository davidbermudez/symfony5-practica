{% extends 'base.html.twig' %}

{% block title %}Introduce una nueva contraseña{% endblock %}

{% block body %}
<section class="section">
    <div class="container">
        <h1 class="title">
            Introduce una nueva contraseña
        </h1>
        <p class="subtitle"></p>
    </div>
</section>
<div class="container is-fluid">
    {{ form_start(resetForm) }}
        <div class="field">
            <label class="label">Introduzca una contraseña válida</label>
            <div class="control has-icons-left">
            {{ form_widget(resetForm.plainPassword.first, {'attr': {'class': 'input is-success'} }) }}
            <span class="icon is-small is-left">
                <i class="fas fa-lock"></i>
            </span>
        </div>
        <div class="field">
            <label class="label">Repita la contraseña</label>
            <div class="control has-icons-left">
            {{ form_widget(resetForm.plainPassword.second, {'attr': {'class': 'input is-success'} }) }}
            <span class="icon is-small is-left">
                <i class="fas fa-lock"></i>
            </span>
        </div>
        <!--Submit button-->
        <div class="field is-grouped">
            <div class="control">
                <button id="submitButton" class="button is-link">Enviar</button>
            </div>
        </div>
    {{ form_end(resetForm) }}
</div>
{% endblock %}
